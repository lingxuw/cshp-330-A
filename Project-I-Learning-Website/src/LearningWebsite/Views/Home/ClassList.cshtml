@model LearningWebsite.Models.ClassListModel

@{
    ViewBag.Title = "Classes";
}

<div>
    <h1>Classes</h1>
</div>

<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th>
            Price
        </th>
        <th></th>
    </tr>

    @foreach (var course in Model.Classes)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => course.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => course.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => course.Price)
            </td>
        </tr>
    }
</table>